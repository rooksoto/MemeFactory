<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_top_buttons"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/colorPrimaryDark"
            android:gravity="center_horizontal|center_vertical"
            android:text="File Name:" />

        <EditText
            android:id="@+id/tv_file_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:background="@color/colorPrimaryDark"
            android:imeOptions="actionDone"
            android:inputType="textAutoCorrect"
            android:maxLines="1"
            android:text="vanilla_meme" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPrimaryDark"
            android:src="@drawable/ic_palette_black_24dp" />


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="11">

        <TextView
            android:id="@+id/top_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:shadowColor="#000000"
            android:shadowDx="5.5"
            android:shadowDy="5.5"
            android:shadowRadius="5.0"
            android:textAllCaps="true"
            android:textColor="#FFFFFF"
            android:textSize="60sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/bottom_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:shadowColor="#000000"
            android:shadowDx="5.0"
            android:shadowDy="5.0"
            android:shadowRadius="5.5"
            android:textAllCaps="true"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/meme_imageview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorLightPrimary"
            android:orientation="vertical">

            <EditText
                android:layout_weight="1"
                android:id="@+id/top_text_editor"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:hint="Add top text here"
                android:imeOptions="actionDone"
                android:inputType="textAutoCorrect"
                android:maxLines="1"
                android:textColorHint="#000" />

            <EditText
                android:layout_weight="1"
                android:id="@+id/bottom_text_editor"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:hint="Add bottom text here"
                android:imeOptions="actionDone"
                android:inputType="textAutoCorrect"
                android:maxLines="1"
                android:textColorHint="#000" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/palette_button"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@color/colorLightPrimary"
            android:src="@drawable/ic_palette_black_24dp" />
    </LinearLayout>

</LinearLayout>