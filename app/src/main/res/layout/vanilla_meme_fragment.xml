<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">

        <ImageView
            android:id="@+id/meme_imageview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/top_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:shadowColor="#000000"
            android:shadowDx="5.5"
            android:shadowDy="5.5"
            android:shadowRadius="5.0"
            android:textSize="60sp"
            android:gravity="center"
            android:text="I swear"/>

        <TextView
            android:id="@+id/bottom_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:shadowColor="#000000"
            android:shadowDx="5.0"
            android:shadowDy="5.0"
            android:shadowRadius="5.5"
            android:textSize="30sp"
            android:gravity="center"
            android:text="I had something for this, I kid you not mofo man"/>

    </RelativeLayout>


    <EditText
        android:id="@+id/top_text_editor"
        android:hint="Add top text here"
        android:textColorHint="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="text"
        android:maxLines="1"
        android:imeOptions="actionDone"/>

    <EditText
        android:id="@+id/bottom_text_editor"
        android:hint="Add bottom text here"
        android:textColorHint="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="text"
        android:maxLines="1"
        android:imeOptions="actionDone"/>

</LinearLayout>